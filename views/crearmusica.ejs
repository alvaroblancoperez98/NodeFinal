<%- include("template/cabecera", {tituloWeb: 'Nuevo disco de musica' }) %>
    <div class="container">
        <h1>Añadir nuevo Disco</h1>
        <form action="/musica" class="my-2" method="POST">
            <input type="text" placeholder="Nombre del disco" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Autor" class="form-control my-2" name="autor">
            <input type="text" placeholder="Género del disco" class="form-control my-2" name="genero">
            <input type="date" placeholder="fecha de salida" class="form-control my-2" name="fechasalida">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
<%- include("template/footer") %>